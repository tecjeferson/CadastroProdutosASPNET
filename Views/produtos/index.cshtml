@model IEnumerable<CadastroProduto.Models.Produto>
    <div class="row">
        <div class="col">
            <h1>Produtos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody">
                    @foreach(var produto in Model)
                    {
                    <tr>
                        <td>@produto.Id</td>
                        <td>@produto.Nome</td>
                        <td>@produto.Quantidade</td>

                        @if(@produto.Estado == true){
                        <td>Funcionando</td>
                        }else{
                        <td>Com Defeito</td>
                        }
                    </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>